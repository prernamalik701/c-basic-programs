//  to find circumferenceof circle and perimetre of rectangle
#include<stdio.h>
int main()
{
    float l,b,r,p,c;
    printf("enter the radius, length,breadth from keyboard\n");
    scanf("%f%f%f",&l,&b,&r);
      p =  (l + b);
    printf("perimetre of rectangle  is  :%f\n",p);
    c = 3.14 * 2 * r ;
    printf("circumference of cicle is :%f\n",c);

    return 0;
    
    
}
