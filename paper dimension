//dimension of paper
#include <stdio.h>

int l=1189,b=841;
int main()
{
    int i, w=841, h=1189, t;
     for(i=0;i<=8;i++)
     {
         printf("\n A%d: %d x %d", i, w, h);
         t = h;
         h = w;
         w = t/2;
     }
     return 0;
} 
